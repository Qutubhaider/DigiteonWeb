@model PolarCastleWeb.Models.CareerApplication
@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Career Application";
}
<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-8">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Add Career Application</h4>
            </div>
        </div>
        <div class="col-4" style="float:right;">
            <a class="btn btn-danger" style="float: right;" asp-area="Admin" asp-controller="Career" asp-action="Index">Back</a>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="SaveCareerApplication" asp-controller="Career" asp-area="Admin" class="custom-validation" enctype="multipart/form-data" novalidate="">
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" asp-for="stName" class="form-control" placeholder="Name">
                            <span class="text-danger" asp-validation-for="stName"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="text" asp-for="stEmail" class="form-control" placeholder="Email">
                            <span class="text-danger" asp-validation-for="stEmail"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <input type="text" asp-for="stMessage" class="form-control" placeholder="Message">
                            <span class="text-danger" asp-validation-for="stMessage"></span>
                        </div>
                         <div class="mb-3">
                            <label class="form-label">CV</label>
                            <input type="File" asp-for="CV" class="form-control" placeholder="CV">
                        </div>
                         
                        <div>
                            <div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light me-1">
                                    Submit
                                </button>
                                <a class="btn btn-secondary waves-effect" asp-area="Admin" asp-controller="Department" asp-action="Index">
                                    Cancel
                                </a>
                            </div>
                        </div>
                        <input type="hidden" asp-for="inCareerApplicationId" />
                        <input type="hidden" asp-for="unCareerApplicationId" />
                        <input type="hidden" asp-for="unCareerId" />
                        <input type="hidden" asp-for="stFileName" />
                        <input type="hidden" asp-for="stUnFileName" />
                    </form>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}