@model PolarCastleWeb.Models.CareerApplication
@{
    Layout = "_LayoutAllPage";
    ViewBag.Title = "Career Application";
}
<section class="page-header">
    <div class="page-header__bg"></div><!-- /.page-header__bg -->
    <div class="page-header-shape-1"></div><!-- /.page-header-shape-1 -->
    <div class="page-header-shape-2"></div><!-- /.page-header-shape-2 -->
    <div class="page-header-shape-3"></div><!-- /.page-header-shape-3 -->

    <div class="container">
        <div class="page-header__inner">
            <ul class="thm-breadcrumb list-unstyled">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><span>/</span></li>
                <li>Careers</li>
                 <li><span>/</span></li>
                <li>Apply Now</li>
            </ul>
            <h2>@Model.stJobName</h2>
        </div>
    </div>
</section>
<section class="message-box">
    <div class="container">


        <div class="row">
            <div class="col-xl-12 col-lg-7">
                <div class="message-box__right">
                    <form asp-action="SaveCareerApplication" asp-controller="Home" asp-area="" class="custom-validation" enctype="multipart/form-data" novalidate="">
                        <h2>Apply Now</h2>
                        <br />
                        <div class="row">
                            <div class="col-xl-6">
                                <span class="text-danger" asp-validation-for="stName"></span>
                                <div class="comment-form__input-box">
                                    <input type="text" asp-for="stName" class="form-control" placeholder="Name">
                                    <div class="comment-form__icon">
                                        <i class="far fa-user-circle"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-6">
                                <span class="text-danger" asp-validation-for="stEmail"></span>
                                <div class="comment-form__input-box">
                                    <input type="text" asp-for="stEmail" class="form-control" placeholder="Email">
                                    <div class="comment-form__icon">
                                        <i class="far fa-envelope"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-6">
                                <span class="text-danger" asp-validation-for="CV"></span>
                                <div class="comment-form__input-box">
                                    <input type="File" asp-for="CV" class="form-control" placeholder="CV">
                                   
                                </div>
                            </div>

                        </div>
                         <br />
                        <div class="row">
                            <div class="col-xl-12">
                                <span class="text-danger" asp-validation-for="stEmail"></span>
                                <div class="comment-form__input-box">
                                    <input type="text" asp-for="stMessage" class="form-control" placeholder="Message">
                                    <div class="comment-form__icon contact-expert__icon-comment">
                                        <i class="far fa-comment"></i>
                                    </div>
                                </div>
                                <button type="submit" class="thm-btn comment-form__btn">
                                    Submit
                                </button>
                            </div>

                        </div>

                        <input type="hidden" asp-for="inCareerApplicationId" />
                        <input type="hidden" asp-for="unCareerApplicationId" />
                        <input type="hidden" asp-for="unCareerId" />
                        <input type="hidden" asp-for="stFileName" />
                        <input type="hidden" asp-for="stUnFileName" />
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>
@section Scripts {
<partial name="_ValidationScriptsPartial.cshtml" />
    }
