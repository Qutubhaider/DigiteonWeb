<style>
    /* Layout */
    .tyra-container {
        --maxw: 1200px;
        --pad: 24px;
        margin-inline: auto;
        max-width: var(--maxw);
        padding: clamp(24px, 2.5vw, 40px) var(--pad);
    }

    .tyra-grid {
        display: grid;
        grid-template-columns: 1.1fr 1fr;
        gap: clamp(20px, 2.5vw, 36px);
    }

    @@media (max-width: 992px) {
        .tyra-grid

    {
        grid-template-columns: 1fr;
    }

    }

    /* Cards */
    .media-card,
    .content-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,.06);
        padding: clamp(16px, 2vw, 24px);
    }

        .media-card.compact {
            padding: 16px;
            margin-top: 20px;
        }

    /* Headers / badges */
    .media-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 14px;
    }

    .badge {
        display: inline-block;
        font-size: 12px;
        font-weight: 600;
        letter-spacing: .3px;
        padding: 6px 10px;
        border-radius: 999px;
        background: #eef3ff;
        color: #3c72fc;
        white-space: nowrap;
    }

    .title {
        margin: 0;
        font-size: clamp(18px, 2.2vw, 22px);
        font-weight: 700;
        color: #111827;
    }

    .headline {
        margin: 0 0 8px;
        font-size: clamp(22px, 3vw, 28px);
        font-weight: 800;
        color: #0f172a;
        letter-spacing: -.02em;
    }

    /* Text */
    .lead {
        margin: 14px 0 10px;
        color: #374151;
        line-height: 1.7;
    }

    .body {
        color: #4b5563;
        line-height: 1.8;
    }

    .feature-list {
        margin: 10px 0 0 18px;
        color: #374151;
    }

        .feature-list li {
            margin: 6px 0;
        }

    /* Video frame — perfect 16:9, responsive, rounded */
    .video-frame {
        position: relative;
        width: 100%;
        aspect-ratio: 16 / 9;
        border-radius: 14px;
        overflow: hidden;
        background: radial-gradient(1200px 300px at -10% -10%, #f3f4f6 20%, transparent 60%), radial-gradient(1200px 300px at 110% 110%, #eef2ff 20%, transparent 60%), #f8fafc;
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
        margin-bottom: 14px;
    }

    .video-el {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        outline: none;
    }

    /* Callout */
    .callout {
        display: flex;
        align-items: center;
        gap: 12px;
        background: linear-gradient(90deg, #f8fafc, #eef3ff);
        border: 1px solid #e5e7eb;
        border-radius: 14px;
        padding: 14px 16px;
        margin: 18px 0 4px;
    }

    .callout-icon {
        font-size: 22px;
    }

    .callout-text p {
        margin: 0;
        color: #475569;
        font-size: 14px;
    }

    .callout-link {
        display: inline-block;
        font-weight: 700;
        color: #1f2937;
        text-decoration: none;
    }

        .callout-link:hover {
            text-decoration: underline;
        }
</style>


