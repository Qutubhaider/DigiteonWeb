@{
    Layout = "_LayoutAllPage";
    ViewData["Title"] = "Strategic Alliance With Tyra";
}
<section class="page-header">
    <div class="page-header__bg"></div><!-- /.page-header__bg -->

    <div class="container">
        <div class="page-header__inner">
            <ul class="thm-breadcrumb list-unstyled">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><span>/</span></li>
                <li>Strategic Alliance With Tyra</li>
            </ul>
            <h2>Strategic Alliance With Tyra</h2>
        </div>
    </div>
</section>

<section class="about" aria-labelledby="about-title">
    <div class="container about__container">
        <div class="about__grid">
            <!-- Left: Image + Video -->
            <div class="media-card">
                <figure class="media-card__figure">
                    <img src="/images/strategic-slliance-with-tyra.jpg" alt="Children learning with Tyra platform" loading="lazy" class="media-card__img" />

                    <button class="media-card__play" id="openVideo" aria-haspopup="dialog" aria-controls="videoDialog" aria-label="Play Tyra introduction video">
                        <svg width="48" height="48" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                            <path d="M8 5v14l11-7z" fill="currentColor" />
                        </svg>
                    </button>
                </figure>

              
            </div>

            <!-- Right: Content -->
            <div class="content-card">
                <h2 id="about-title">Strategic Alliance With Tyra</h2>
                <p class="lead">
                    We are proud to be the exclusive go-to-market partner for <a href="https://tyra.io/" target="_blank" rel="noopener noreferrer">Tyra</a> across India. Tyra is a well-established early learning platform in the Nordic market,
                    known for research-backed preschool solutions. Together we bring Tyra’s proven preschool platform to India — adapted for local languages, contexts, and classroom needs.
                </p>

                <ul class="highlights" aria-hidden="false">
                    <li><strong>Localized curriculum:</strong> Content adapted to local languages and cultural contexts.</li>
                    <li><strong>Teacher training:</strong> Practical onboarding and continuous upskilling for educators.</li>
                    <li><strong>Assessment & progress:</strong> Research-backed early learning assessments and parent reports.</li>
                </ul>

            </div>
        </div>
    </div>
</section>

<!-- Video Dialog (accessible) -->
<div id="videoDialog" class="dialog" role="dialog" aria-modal="true" aria-hidden="true" aria-labelledby="videoDialogTitle">
    <div class="dialog__panel">
        <button class="dialog__close" id="closeVideo" aria-label="Close video">✕</button>
        <h3 id="videoDialogTitle" class="visually-hidden">Tyra Introduction Video</h3>
        <video id="dialogVideo" class="dialog__video" controls playsinline preload="auto" poster="/images/img-11.jpg">
            <source src="/video/tyra-2.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
    </div>
</div>

<style>
    /* CSS variables */
    :root {
        --container-max: 1100px;
        --accent: #2b6cb0; /* deep blue */
        --muted: #6b7280;
        --card-bg: linear-gradient(180deg, rgba(255,255,255,0.98), rgba(250,250,250,0.98));
        --radius: 14px;
    }

    /* Utility layout */
    .container {
        max-width: var(--container-max);
        margin: 0 auto;
        padding: 28px 20px
    }

    

    h1 {
        font-size: clamp(20px,3.6vw,36px);
        margin: 0
    }

    /* About section */
    .about {
        padding: 40px 0
    }

    .about__grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 22px;
        align-items: center
    }

    /* Media card */
    .media-card {
        background: var(--card-bg);
        border-radius: var(--radius);
        box-shadow: 0 8px 28px rgba(13,19,25,0.06);
        overflow: hidden
    }

    .media-card__figure {
        position: relative;
        margin: 0
    }

    .media-card__img {
        display: block;
        width: 100%;
        height: auto;
        object-fit: cover
    }

    .media-card__play {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%,-50%);
        background: rgba(11,41,69,0.7);
        border-radius: 999px;
        border: 0;
        padding: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: #fff
    }

        .media-card__play:focus {
            outline: 3px solid rgba(43,108,176,0.28)
        }

    .video-inline {
        display: none;
        padding: 12px
    }

    .video-el {
        width: 100%;
        height: auto;
        border-radius: 10px;
        background: #000
    }

    /* Content card */
    .content-card {
        padding: 22px 22px
    }

        .content-card .lead {
            color: #111827;
            line-height: 1.6;
            margin-top: 8px
        }

    .highlights {
        margin: 16px 0 20px;
        padding-left: 18px;
        color: var(--muted)
    }

        .highlights li {
            margin-bottom: 10px
        }

    .actions {
        display: flex;
        gap: 12px
    }

    .btn {
        display: inline-block;
        padding: 10px 16px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600
    }

    .btn-primary {
        background: var(--accent);
        color: #fff
    }

    .btn-outline {
        border: 1px solid var(--accent);
        color: var(--accent);
        background: transparent
    }

    /* Dialog */
    .dialog {
        position: fixed;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        z-index: 1100;
        visibility: hidden;
        opacity: 0;
        transition: opacity .18s ease,visibility .18s
    }

        .dialog[aria-hidden="false"] {
            visibility: visible;
            opacity: 1
        }

    .dialog__panel {
        max-width: 900px;
        width: 100%;
        background: #fff;
        border-radius: 12px;
        padding: 18px;
        box-shadow: 0 20px 50px rgba(15,23,42,0.35);
        position: relative
    }

    .dialog__close {
        position: absolute;
        right: 12px;
        top: 10px;
        background: transparent;
        border: 0;
        font-size: 20px;
        cursor: pointer
    }

    .dialog__video {
        width: 100%;
        height: auto;
        border-radius: 8px
    }

    /* accessibility helper */
    .visually-hidden {
        position: absolute !important;
        height: 1px;
        width: 1px;
        overflow: hidden;
        clip: rect(1px,1px,1px,1px);
        white-space: nowrap
    }

    /* Responsive */
    @@media(min-width:860px) {
        .about__grid {
            grid-template-columns: repeat(2,1fr);
            gap: 28px
        }

        .video-inline {
            display: block
        }
    }
</style>

<script>
    (function(){
      const openBtn = document.getElementById('openVideo');
      const dialog = document.getElementById('videoDialog');
      const closeBtn = document.getElementById('closeVideo');
      const dialogVideo = document.getElementById('dialogVideo');

      function openDialog(){
        dialog.setAttribute('aria-hidden','false');
        dialog.style.visibility = 'visible';
        dialog.style.opacity = '1';
        try{ dialogVideo.currentTime = 0; dialogVideo.play(); }catch(e){}
      }
      function closeDialog(){
        dialog.setAttribute('aria-hidden','true');
        dialog.style.opacity = '0';
        setTimeout(()=> dialog.style.visibility='hidden',200);
        try{ dialogVideo.pause(); dialogVideo.currentTime = 0; }catch(e){}
      }

      openBtn && openBtn.addEventListener('click', openDialog);
      closeBtn && closeBtn.addEventListener('click', closeDialog);
      dialog && dialog.addEventListener('click', function(e){ if(e.target === dialog) closeDialog(); });
      document.addEventListener('keydown', function(e){ if(e.key === 'Escape' && dialog.getAttribute('aria-hidden') === 'false') closeDialog(); });
    })();
</script>

